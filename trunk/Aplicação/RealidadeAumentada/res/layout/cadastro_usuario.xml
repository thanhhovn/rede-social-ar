<?xml version="1.0" encoding="utf-8"?>
	  	
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/layoutCadastroPrincipal"
	   android:layout_height="wrap_content"
	   android:layout_width="fill_parent"
       android:orientation="vertical"
       android:background="#C0C0C0" >
          
       <!--       Nome de Login -->
	   <TextView
          android:id="@+id/tv_nomeLoginUsuario"
          android:textColor="#1D3472"
          android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
          android:gravity="left"
          android:textStyle="bold"
          android:text="Nome de Login: " />
	 
       <EditText
           android:id="@+id/et_nomeLoginUsuario"
     	   android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
           android:maxLength="10">
<!--            <requestFocus /> -->
       </EditText>
       
<!-- 	Email -->
     <TextView
         android:id="@+id/tv_emailUsuario"
         android:textColor="#1D3472"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:gravity="left"
         android:textStyle="bold"
         android:text="Email: " />
     <EditText
         android:id="@+id/ed_emailUsuario"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:ems="10"
         android:inputType="textEmailAddress" />
     
     <TextView
          android:id="@+id/tv_emailInvalido"
 		  android:textColor="#FF0000"
          android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_marginLeft="15dp"
          android:textStyle="bold" />
       
       <!--       Senha	 -->
	   <TextView
          android:id="@+id/tv_senhaUsuario"
          android:textColor="#1D3472"
          android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
          android:gravity="left"
          android:textStyle="bold"
          android:text="Senha: " />
	   
	   <EditText 
	       android:id="@+id/et_senhaUsuario"
     	   android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
           android:maxLength="12"
           android:password="true" >
<!--            <requestFocus /> -->
	   </EditText>    
	   
<!--   Confirmar  Senha	 -->
	   <TextView
          android:id="@+id/tv_confirmarSenhaUsuario"
          android:textColor="#1D3472"
          android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
          android:gravity="left"
          android:textStyle="bold"
          android:text="Confirmar Senha: " />
	   
	   <EditText 
	       android:id="@+id/et_confirmarSenhaUsuario"
     	   android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
           android:maxLength="12"
           android:password="true" >
<!--            <requestFocus /> -->
	   </EditText>  
	   
	   <TextView
          android:id="@+id/tv_senhaNaoConferi"
 		  android:textColor="#FF0000"
          android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_marginLeft="15dp"
          android:textStyle="bold" />
    
    <RelativeLayout
        android:id="@+id/layoutCadastroUsuario"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >
         
        <Button
            android:id="@+id/btEntrar"
            style="@style/TitleBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:text="Confirmar" />
        
        <Button
            android:id="@+id/btCancelar"
            style="@style/TitleBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/btEntrar"
            android:text="Cancelar" />
        
    </RelativeLayout>

  </LinearLayout>
	

	