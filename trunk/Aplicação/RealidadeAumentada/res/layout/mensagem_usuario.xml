<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >
	  	
  <LinearLayout
      android:id="@+id/layoutPrincipalMensagem"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="#C0C0C0"
      android:gravity="left|right"
      android:orientation="vertical" >
	
     <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

         <ImageView
            android:id="@+id/balloon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:onClick="adicionarAmigo"
            android:src="@drawable/plus" />

         <TextView
             android:id="@+id/usuarioLogado"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="80dp"
             android:layout_toRightOf="@+id/balloon_close"
             android:textColor="@android:color/primary_text_light"
             android:textSize="16dip" 
             android:text="UsuÃ¡rio:"/>
         
         <TextView
             android:id="@+id/nome_usuarioLogado"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_toRightOf="@+id/usuarioLogado"
             android:text="Lucas Fernandes"
             android:textColor="@android:color/primary_text_light"
             android:textSize="16dip" />
    </RelativeLayout>
 	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:orientation="horizontal" />

 <LinearLayout
        android:id="@+id/layoutMensagemUsuario"
	   	android:layout_width="fill_parent"
   	   	android:layout_height="wrap_content"
       	android:orientation="horizontal" >
	   <TextView
          android:id="@+id/tv_pais"
          android:textColor="#1D3472"
          android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
          android:gravity="left"
          android:textStyle="bold"
          android:textSize="16dip"
          android:text="Enviar mensagem para: " />

	   <Spinner
	       android:id="@+id/amigosUsuario"
	       android:layout_width="150dp"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="1dp" />

	 </LinearLayout>
	 
      <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
         <TextView
             android:id="@+id/mensagem"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_toLeftOf="@+id/tv_pais"
             android:textColor="@android:color/primary_text_light"
            
             android:textSize="16dip" />

         <EditText
             android:id="@+id/edit_mensagem"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:inputType="textMultiLine"
             android:maxLength="50"
             android:maxLines="10"
             android:textColor="@android:color/primary_text_light"
             android:textSize="16dip" />

     </RelativeLayout>  

 <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btEntrar"
                style="@style/TitleBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="54dp"
                android:background="@drawable/formatobutton"
                android:text="Enviar" />

            <Button
                android:id="@+id/btInscrever"
                style="@style/TitleBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="41dp"
                android:layout_toRightOf="@+id/btEntrar"
                android:background="@drawable/formatobutton"
                android:text="Voltar" />
             
        </RelativeLayout>
  </LinearLayout>
</ScrollView>	

	